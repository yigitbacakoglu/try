<div class="container">
  <% unless session[:omniauth] %>

      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <%= link_to "STS", root_path, class: "brand" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span6 offset3">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
              <fieldset>
                <legend>Sign up !</legend>

                <div class="control-group email">
                  <label class="email control-label" for="user_email">
                    E-mail</label>

                  <div class="controls">
                    <%= f.email_field :email %>
                  </div>
                </div>
                <div class="control-group password">
                  <label class="password control-label" for="user_email">
                    Password</label>

                  <div class="controls">
                    <%= f.password_field :password %>
                  </div>
                </div>
                <div class="control-group password" style="width: 175px !important;">
                  <label class="password  control-label" for="user_email">
                    Password Confirmation</label>

                  <div class="controls">
                    <%= f.password_field :password_confirmation %>
                  </div>
                </div>


                <div class="form-actions">
                  <%= f.submit "Submit", class: "btn-primary btn" %>
                  <%= link_to 'Cancel', root_path, class: 'btn' %>
                  <%= link_to "Have an accountï¼Ÿ", new_session_path(resource_name), class: "btn btn-success", style: "float:right; color:white;" %>
                </div>
              </fieldset>
          <% end %>
        </div>
      </div>
      <hr>
  <% else %>
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span12">
            <div class="login-container center">
              <div class="title text-transparent">One more step</div>
              <hr class="main">

              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'login-form', :method => :post}) do |f| %>
                  <ul class="fields-list">
                    <li>
                      <i class="icon-user" style="float: left;"></i>
                      <%= f.email_field :email, :autocomplete => "off", :id => "username", :placeholder => "Email" %>
                    </li>
                  </ul>

                  <div class="actions">
                    <%= f.submit 'Save & Continue', :class => 'btn btn-large medium-blue login-btn' %>
                  </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
<% end %>
  <footer>
    <p>YCB &copy; All Rights Reserved.</p>
  </footer>

</div>
